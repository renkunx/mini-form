:host {
  background-color: #f5f5f5;
}
page view {
  box-sizing: border-box;
}
.t-avatar-button {
  margin: 64rpx auto;
  height: 176rpx !important;
  background-color: transparent !important;
}

.person-info {
  padding-top: 20rpx;
}

.person-info__btn {
  width: 100%;
  border: 2rpx solid #ddd;
  border-radius: 48rpx;
  padding: 18rpx 0;
  display: flex;
  align-self: center;
  justify-content: center;
}
.person-info__wrapper {
  width: 100%;
  padding: 0 32rpx;
  padding-bottom: calc(env(safe-area-inset-bottom) + 20rpx);
  position: absolute;
  bottom: 0;
  left: 0;
}

.t-class-confirm {
  color: #fa550f !important;
}

.person-info .order-group__left {
  margin-right: 0;
}
.person-info .t-cell-class {
  height: 112rpx;
}

.t-cell__right button {
  width: 64rpx;
  height: 64rpx;
  padding: 12rpx;
}

.user-center-card__header__avatar {
  border-radius: 48rpx;
  overflow: hidden;
}